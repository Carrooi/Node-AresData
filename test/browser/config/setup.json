{
	"packages": {
		"tests": {
			"base": "../../",
			"application": "./test/browser/tests.js",
			"modules": [
				"./src/*.coffee",
				"./test/browser/*.coffee",
				"./node_modules/moment/moment.js",
				"./node_modules/moment/lang/en-gb.js",
				"./node_modules/q/q.js",
				"./node_modules/xml2js/*.js",
				"./node_modules/browser-http/lib/*.js",
				"./node_modules/browser-http/Helpers.js"
			],
			"coreModules": [
				"events"
			],
			"aliases": {
				"ares-data": "src/Ares",
				"ares-data/Validators": "src/Validators"
			},
			"run": [
				"test/browser/Validators",
				"test/browser/Ares"
			]
		}
	},
	"debugger": {
		"scripts": true
	}
}
